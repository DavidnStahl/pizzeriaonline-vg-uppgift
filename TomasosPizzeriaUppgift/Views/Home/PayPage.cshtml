@model MenuPage
@{



    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalpris = 0;
    var itemcount = 0;

}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" asp-append-version="true" />
<link href="~/css/MenuPage.css" rel="stylesheet" type="text/css" asp-append-version="true" />

<div class="d-flex justify-content-center">


        <div id="menudiv">
            <h2>Betalning</h2>

            <section class="menu-items">
                <table id="updatetable" class="table table-borderless table-css">
                    <thead>
                        <tr>
                            <th scope="col">Maträtt typ</th>
                            <th scope="col">Maträtt</th>
                            <th scope="col">Pris</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Matratteradded)
                        {


                            totalpris += item.Pris;

                        <tr>
                            @if (item.Pris != 0)
                            {
                                <td>@Model.mattratttyper[@item.MatrattTyp - 1].Beskrivning</td>
                                <td>@item.MatrattNamn</td>

                                <td>@item.Pris</td>

                            }

                        </tr>
                            itemcount++;
                        }

                    </tbody>
                </table>
                <br />


                @if (totalpris != 0)
                {
                    <hr />
                    <table class="table table-borderless table-css">
                        <thead>
                            <tr>

                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>

                                    <label>Totalpris: @totalpris Kr</label>
                                </td>
                                <td class="btn .btn-sm btn-success"> <a asp-area="" asp-controller="Home" asp-action="PayUser">Betala</a></td>

                            </tr>

                        </tbody>
                    </table>

                }
            </section>



        </div>

</div>